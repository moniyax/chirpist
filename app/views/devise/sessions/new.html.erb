<div class="d-flex justify-content-center">
  <div style="
  width: 30%;
  ">
    <div class="login-head text-center" style="
    margin-top: 100px;
    ">
      <%= image_tag 'parrot.png' %>
      <h3 style="
      color: #009688;
      ">Chirpist</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'new_user mt-4 p-3 rounded', style: 'border: 1px solid #00968875'}) do |f| %>
      <div class="mb-3 text-center">Log in to your account</div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "form-control", style: "font-size: 14px" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control", style: "font-size: 14px" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary w-100", style: "
    border-color: #009688;
    background: #009688;
" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check mt-2">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>


    <% end %>

    <div class="text-center mt-2" style="
    font-size: 15px;
    ">
      <span class="text-light text-muted">New to Chirpist?</span> <%= link_to "Sign up", new_registration_path(resource_name) %>
    </div>


    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-center  mt-2">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
      </div>
    <% end -%>

  </div>
</div>