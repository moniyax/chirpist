<div class="d-flex justify-content-center">
  <div style="
  width: 40%;
  ">
    <div class="devise_errors">
      <%= devise_error_messages! %>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'new_user mt-4 p-3 rounded', style: 'border: 1px solid #00968875'}) do |f| %>
      <div class="mb-3 text-center" style="
      font-size: 17px;
          color: #009688;
      ">
        Change your password
      </div>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">

        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control", style: "font-size: 14px" %>
        <% if @minimum_password_length %>
          <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: "form-control", style: "font-size: 14px" %>
      </div>


      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary w-100", style: "
    border-color: #009688;
    background: #009688;
" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</div>
