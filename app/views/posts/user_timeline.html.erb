<div class="row">
  <div class="col-3">
    <div class="align-items-center card">
      <%= image_tag @user.avatar_url(384), class: 'mt-2 rounded-circle', style: "
    width: 128px;
    height: 128px;
" %>
      <h6 class="mb-0 mt-2"><%= @user.fullname %></h6>
      <p>@<%= @user.moniker %></p>

      <div class="px-3 w-100">
        <p class="card-text"><%= @user.description %></p>
      </div>
      <div class="d-flex mb-4 mt-2">
        <a href="#" class="align-items-center card-link d-flex flex-column" style="color: #009688;"><p class="my-0">Posts</p><%= @user.posts.count %></a>
        <a href="#" class="align-items-center card-link d-flex flex-column" style="color: #009688;"><p class="my-0">Followers</p>0</a>
        <a href="#" class="align-items-center card-link d-flex flex-column" style="color: #009688;"><p class="my-0">Following</p>0</a>
      </div>
    </div>
  </div>
  <div class="col-6">
    <ul class="list-unstyled card pb-5">
        <%= render @posts %>
    </ul>
  </div>
  <div class="col-3">
    <div class="card">
      <div class="card-body">
        <div><span class="h6">Who to follow</span> .
          <span class="small"><a href="#" style="color: #009688;">Refresh</a> · <a href="#" style="color: #009688;">View all</a></span></div>
      </div>
      <ul class="list-group list-group-flush">
        <% User.where.not(id: @user.id).last(6).each do |u| %>
          <li class="list-group-item">
            <div class="media">
              <%= image_tag u.avatar_url(120), size: '40x40', class: 'mr-3 rounded-circle' %>
              <div class="media-body">
                <h6 class="h mb-0 mt-0" style="
                font-size: 14px;
                "><%= u.fullname %></h6>
                <button type="button" class="btn btn-outline-primary py-0 mt-2" style="border-radius: 1rem; font-size: 10px;">Follow
                </button>

              </div>
            </div>
          </li>
        <% end %>
      </ul>

    </div>
    <div class="card mt-3">
      <div class="card-body">
        © 2018 Mayowa Yakub
      </div>
    </div>
  </div>
</div>