<!DOCTYPE html>
<html>
<head>
  <title>Chirpist</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body style="
background: #9e9e9e2b;
    font-size: 14px;
">

<% if flash.notice %>
  <div class="alert alert-success alert-dismissible fade show mb-0 text-center" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash.alert %>
  <div class="alert alert-warning alert-dismissible fade show mb-0 text-center" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<header class="bd-navbar flex-column flex-md-row navbar navbar-dark navbar-expand sticky-top" style="
background: #009688;
">
  <a class="navbar-brand mr-0 mr-md-2" href="/" aria-label="Bootstrap">
    <%= image_tag 'logo.png' %>
  </a>

  <div class="ml-3 navbar-nav-scroll">
    <ul class="navbar-nav bd-navbar-nav flex-row">
      <li class="nav-item">
        <%= link_to 'Home', root_path, class: 'nav-link active' %>
      </li>
      <li class="nav-item">
        <%= link_to "Profile", user_timeline_path(current_user.moniker), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">Messages</a>
      </li>
    </ul>
  </div>

  <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    <li class="nav-item dropdown">
      <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag current_user.avatar_url(96), class: 'rounded-circle', size: '32x32' %>

      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions" style="
      font-size: 14px;
      ">
        <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "Profile", user_timeline_path(current_user.moniker), class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>

      </div>
    </li>

  </ul>

</header>
<div class="container" style="
margin-top: 12px;
">
  <%= yield %></div>

</body>

</html>
