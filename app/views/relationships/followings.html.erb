<div class="row">
  <div class="col-3">
    <%= render 'posts/user_card', user: current_user %>
  </div>
  <div class="col-6">
    <ul class="list-unstyled card pb-5">
      <h4 class="m-4">Following</h4>

      <% @followings.each do |following| %>
        <%= render 'following', following: following %>
      <% end %>
    </ul>
  </div>
  <div class="col-3">
    <%= render 'posts/sidebar', user: current_user %>
  </div>
</div>
